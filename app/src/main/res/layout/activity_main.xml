<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="105dp"
        android:layout_height="47dp"
        android:text="Bombs"
        android:textOff="Off"
        android:textOn="On"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="634dp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:contentDescription="startButton"
        android:text="Start"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="539dp"
        tools:text="Start" />

    <Button
        android:id="@+id/leader_button"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Leader Board"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="534dp" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:text="Enter Name"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="447dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="138dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="156dp"
        android:text="Serpent Invasion"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>